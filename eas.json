{
  "cli": {
    "version": ">= 16.15.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "autoIncrement": true,
      "ios": {
        "simulator": true,
        "autoIncrement": "buildNumber"

      },
      "android": {
        "buildType": "apk",
        "autoIncrement": "versionCode"
      },
      "env": {
        "ENV": "development"
      }
    },
    "preview": {
      "distribution": "internal",
      "autoIncrement": true,
      "ios": {
        "autoIncrement": "buildNumber"
      },
      "android": {
        "buildType": "apk",
        "autoIncrement": "versionCode"
      },
      "env": {
        "ENV": "preview"
      }
    },
    "production": {
      "distribution": "store",
      "autoIncrement": true,
      "ios": {
        "autoIncrement": "buildNumber"
      },
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": "versionCode"
      },
      "env": {
        "ENV": "production"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {},
      "android": {}
    }
  }
}
